<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/side_bar_list_selector" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/dimen_20dp" >

            <ImageView
                android:id="@+id/imgViewIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_about" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="Medium Text"
                android:textColor="@color/text_white_cloor"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/frameHeader"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/side_bar_list_header_bg" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/dimen_20dp" >

            <TextView
                android:id="@+id/tvTitleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textColor="@color/text_white_cloor"
                android:textSize="@dimen/text_size_18sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
